@model AirsoftApp.Models.EscuadronViewModel

@{
    ViewBag.Title = "Datos del nuevo escuadron. (*) Los datos son obligatorios";
}
<div class="ventana">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("NuevoEscuadron", "Escuadron", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
<div>
    @Html.HiddenFor(d => d.CodEscuadron)

    <label>Avatar</label><br />
    <div class="alineador"><div class="perfil" id="imagePreview"></div></div>
    <br />
    <input type="file" id="imagen" name="ImgPerfil" accept=".jpg " class="form-control" /><br />
    @Html.ValidationMessageFor(d => d.ImgEscuadron, "", new { @class = "label label-danger" })<br />

    @Html.LabelFor(d => d.CodEscuadron)
    @Html.DisplayFor(d => d.CodEscuadron, "", new { @class = "form-control" })
    <br />
    <br />
    @Html.LabelFor(d => d.NomEscuadron)

    @Html.TextBoxFor(d => d.NomEscuadron, "", new { @class = "form-control" })<br />
    @Html.ValidationMessageFor(d => d.NomEscuadron, "", new { @class = "label label-danger" })<br />

    @Html.LabelFor(d => d.EstEscuadron)
    <br />
    <label>@Html.RadioButtonFor(d => d.EstEscuadron, true) SI</label>
    <br />
    <label>@Html.RadioButtonFor(d => d.EstEscuadron, false) NO</label>
    <br />
    <br />
    <input value="Nuevo" class="btn btn-primary" type="submit" /> | <a href="~/Juego/IndexJuego" class="btn btn-primary">volver</a>


</div>
    }
</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous">

</script>

<script type="text/javascript">
    (function () {
        function filePreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imagePreview').html("<img width='200' src='" + e.target.result + "'>");
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        $('#imagen').change(function () {
            filePreview(this);
        });
    })();

</script>

@if (TempData["Mensaje"] != null)
{

    <script type="text/javascript">

        window.onload = function()
        {
            //$(document).ready(function () {  //sirve para cargar una ventana modal
            //    $('#Exito').modal('toggle')
            //});
            alert("@TempData["Mensaje"]");
        };

    </script>
}

