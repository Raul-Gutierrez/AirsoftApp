<div id="Error" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="alineador">
                <div class="modal-body">
                    <img src="~/Images/error_600x600.png" />
                    <h1>¡ha ocurrido un error al procesar la solicitud!</h1>
                    <h1>@ViewData["MensajeError"]</h1>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>


